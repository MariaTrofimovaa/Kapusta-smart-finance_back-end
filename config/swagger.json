{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Kapusta-finance API docs",
    "description": "API documentation for the GoIT 'Kapusta-finance' project. [Backend GitHub Repository](https://github.com/MariaTrofimovaa/Kapusta-smart-finance_back-end)",
    "license": {
      "name": "MIT",
